<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ManageRequirementsViewController">
   <children>
      <Label text="Name" />
      <TextField fx:id="requirementName" />
      <HBox prefHeight="29.0" prefWidth="600.0">
         <children>
            <Label text="Description" />
            <ToggleButton mnemonicParsing="false" text="Functional" />
            <ToggleButton mnemonicParsing="false" text="Not functional" />
         </children>
      </HBox>
      <TextArea fx:id="requirementDescription" prefHeight="93.0" prefWidth="600.0" />
      <Label text="deadline" />
      <DatePicker fx:id="requirementDeadline" />
      <Label text="Reasponsible team member" />
      <TextField fx:id="RequirementResponsibleMember" />
      <Button mnemonicParsing="false" text="OK" onAction="#confirm"/>
      <Button mnemonicParsing="false" text="Cancel" onAction="#openRequirementView"/>
   </children>
</VBox>
