<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ManageRequirementsViewController">
   <children>
      <Label text="Name:">
         <VBox.margin>
            <Insets left="5.0" />
         </VBox.margin></Label>
      <TextField fx:id="requirementName" />
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="Description:">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin></Label>
            <ToggleButton mnemonicParsing="false" prefWidth="100.0" text="Functional" />
            <Label text="or">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Label>
            <ToggleButton mnemonicParsing="false" prefWidth="109.0" text="Not functional" />
            <Label text="sorry just non functional requirements now">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></Label>
         </children>
      </HBox>
      <TextArea fx:id="requirementDescription" prefHeight="93.0" prefWidth="600.0" wrapText="true">
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin></TextArea>
      <Label text="Deadline">
         <VBox.margin>
            <Insets left="5.0" right="5.0" top="5.0" />
         </VBox.margin></Label>
      <DatePicker fx:id="requirementDeadline">
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin></DatePicker>
      <Label text="Reasponsible team member" />
      <ChoiceBox fx:id="RequirementResponsibleMember" minWidth="158.0" prefHeight="26.0">
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
      </ChoiceBox>
      <Label alignment="CENTER_RIGHT" text="Status(will be set to &quot;not started&quot; when the requirement is created)" />
      <ChoiceBox fx:id="RequirementResponsibleMember1" minWidth="158.0" prefHeight="26.0" />
      <HBox alignment="BOTTOM_LEFT" prefHeight="65.0" prefWidth="579.0">
         <children>
            <Button mnemonicParsing="false" onAction="#confirm" prefWidth="54.0" text="OK">
               <HBox.margin>
                  <Insets right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#openRequirementView" prefWidth="54.0" text="Cancel">
               <HBox.margin>
                  <Insets right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
